<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<HediffDef ParentName="ChronicDiseaseBase">
		<defName>CerebralHypoxia</defName>
		<label>cerebral hypoxia</label>
		<description>Brain damage due to prolonged oxygen deprivation.</description>
		<cureAllAtOnceIfCuredByItem>true</cureAllAtOnceIfCuredByItem>
		<chronic>true</chronic>
		<stages>
			<li>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>HypoxiaSickness</defName>
		<label>hypoxia sickness</label>
		<description>After-effects of suffering hypoxia, the body may take a while to recover from low blood-oxygen.</description>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>8000~12000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<vomitMtbDays>0.125</vomitMtbDays>
				<restFallFactor>2</restFallFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.75</postFactor>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.6</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.5</postFactor>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>Hypoxia</defName>
		<label>hypoxia</label>
		<hediffClass>NMO.Oxygen.Hediff_Hypoxia</hediffClass>
		<description>N/A</description>
		<lethalSeverity>1</lethalSeverity>
		<scenarioCanAdd>true</scenarioCanAdd>
		<!--
		First 5 Stages happen as oxygen is below safe levels
		=> Unconcious 
		
		After that 10 second until brain damage
		
		10 more seconds and pawn dies
		
		 -->
		<stages>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>trivial</label>
				<socialFightChanceFactor>1.5</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<label>minor</label>
				<socialFightChanceFactor>2</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<label>moderate</label>
				<socialFightChanceFactor>2.5</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.35</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>severe</label>
				<socialFightChanceFactor>3</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.30</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.35</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.65</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>
